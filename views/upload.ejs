<%- include('partials/head.ejs', { title: 'Upload' }) %>
<%- include('partials/menu.ejs', {pages : pages}) %>

<head>
        <title>EditArea Test</title>
        <script language="javascript" type="text/javascript" src="/editarea/edit_area/edit_area_full.js"></script>
        <script language="javascript" type="text/javascript">
        // https://www.cdolivet.com/editarea/editarea/docs/javascript_functions.html
        editAreaLoader.init({
            id : "edit-page-content"		// textarea id
            ,syntax: "html"			// syntax to be uses for highgliting
            ,start_highlight: true,		// to display with highlight mode on start-up
            allow_toggle: false,
        });
        </script>
</head>

<script src="/ace-builds/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script> 

<div class="page-container">
    <div class="well">
        <center><h3>Upload page content</h3></center>
        <form id="send-page-content" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label>Page Name</label>
                <select id="pageName" class="form-control">
                        <% for (var page of pages) { %>
                            <option value="<%=page.name%>"><%=page.name%></option>
                        <% } %>            
                </select>
            </div>

            <div class="form-group">
                <label>Content Name</label>
                <input type="text" class="form-control" name="pageContentName">
            </div>

            <div class="form-group">
                    <label>Archive</label><br>
                    <label class="fileContainer">
                            <button class="btn btn-primary">Choose archive</button>
                            <input type="file" name="pageArchive"/>
                        </label>
            </div>
            <center>
            <input class="btn btn-primary" id="upload" type="submit" value="Upload">
            </center>
        </form>
    </div>

    <div class="well">
        <center><h3>Upload page</h3></center>

        <form id="send-page" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="pageName">
            </div>
            <center>
                <input class="btn btn-primary" id="pageUpload" type="submit" value="Upload">
            </center>
        </form>
    </div>

    <div class="well">
            <center><h3>Edit page content</h3></center>

            <select id="page-content-edit-select" class="form-control">
                    <option value="" disabled selected>Select page content to edit</option>
                    <% for (var content of pageContents) { %>
                        <% var fullContentName= content.pageName + "/" + content.name %>
                        <option value="<%=fullContentName%>"><%=fullContentName%></option>
                    <% } %>            
            </select>
            <br>
            <textarea id="edit-page-content" style="height: 500px; width: 100%;" class="form-control">
            </textarea>

            <center>
                <input class="btn btn-primary" id="edit-page-content-submit" value="Submit changes">
            </center>
    </div>
</div>



<!-- Modal - displaying messages -->
<div class="modal fade" id="modal-message" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#page-content-edit-select').on('change', e => {
        var fullPageContentName = document.getElementById("page-content-edit-select").value;
        fetch('/page/' + fullPageContentName, {
            method : 'get'
        })
        .then(response => response.json())
        .then(response => {
            editAreaLoader.setValue("edit-page-content", response.content);
        })
        .catch(console.error);
    });
</script>

<script>
    $('#edit-page-content-submit').on('click', e => {
        var html = editAreaLoader.getValue('edit-page-content');
        var fullPageContentName = document.getElementById("page-content-edit-select").value;
        fetch('update/'+fullPageContentName, {
            method : 'post',
            headers: { 'Content-Type': 'application/json'},
            body: JSON.stringify({html : html})
        })
        .then(response => response.json())
        .then(response => {
            console.log(response);
            if(response.err) {
                $('#modal-message .modal-title').text("Error");
                $('#modal-message .modal-body').text(response.err);
                $('#modal-message').modal();
            }
            else {
                document.getElementById("send-page").reset();
                $('#modal-message .modal-title').text("Success");
                $('#modal-message .modal-body').text("Congratulations, page content successfully updated");
                $('#modal-message').modal();
            }
        })
        .catch(console.error);
    });
</script>

<script>
    $('#send-page').on('submit', e => {
        e.preventDefault();

        var name = $('#send-page :input[name="pageName"]')[0];

        fetch('/upload/page', {
            method : 'post',
            headers: { 'Content-Type': 'application/json' },
            body : JSON.stringify({name : name.value})
        })
        .then(response => response.json())
        .then(response => {
            if(response.err) {
                $('#modal-message .modal-title').text("Error");
                $('#modal-message .modal-body').text(response.err);
                $('#modal-message').modal();
            }
            else {
                document.getElementById("send-page").reset();
                $('#modal-message .modal-title').text("Success");
                $('#modal-message .modal-body').text("Congratulations, page successfully uploaded");
                $('#modal-message').modal();
            }
        })
        .catch(console.error);
    });
</script>

<script>
    $('#send-page-content').on('submit', e => {
        e.preventDefault();

        var data = new FormData();

        var archiveFile = $('#send-page-content :input[name="pageArchive"]')[0];
        data.append('archive', archiveFile.files[0]);

        var pageName =  document.getElementById('pageName');
        data.append('pageName', pageName.value);

        var name = $('#send-page-content :input[name="pageContentName"]')[0];
        data.append('name', name.value);

            fetch('/upload', {
                method: 'post',
                body: data
            })  .then(response => response.json())
                .then(
                    response => {
                        console.log(response);
                        if (response.err) {
                            $('#modal-message .modal-title').text("Error");
                            $('#modal-message .modal-body').text(response.err);
                            $('#modal-message').modal();
                        }
                        else {
                            console.log("SUCCES");
                            console.log(response);
                            document.getElementById("send-page-content").reset();
                            $('#modal-message .modal-title').text("Success");
                            $('#modal-message .modal-body').text(
                                "Congratulations, page content successfully uploaded");
                            $('#modal-message').modal();
                        }
                    }
                )
                .catch(console.error);
        
    });
</script>